<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= Ingredient.find(dose.ingredient_id).name %>
    <%= link_to dose_path(dose), method: :delete do %>
      <p>delete</p>
    <% end %>
    </li>
  <% end %>
</ul>


  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "add description" %>
  <% end %>


<%= link_to 'back to cocktails', cocktails_path %>
